{
  "name": "p5js",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "sync": "browser-sync start --server --no-open --files='*.html, *.css, ./js/*.js, ./shader/*.frag, ./shader/*.vert'",
    "minify": "onchange ./js/main.js -- minify ./js/main.js",
    "min": "onchange ./js/main.js -- node ./js/minify.js",
    "start": "concurrently \"npm run sync\" \"npm run min\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "minify": "^5.1.1",
    "onchange": "^6.1.1"
  },
  "dependencies": {
    "p5": "^1.0.0"
  }
}
